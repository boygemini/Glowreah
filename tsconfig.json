{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/components/ui/Button.jsx",
    "lib/useDatabase.jsx",
    "app/contexts/DatabaseProvider.jsx",
    "lib/createDatabase.js",
    "lib/simpleIndexedDB.js",
    "app/components/HeroChildren/index.jsx",
    "app/api/getData.ts"
  ],
  "exclude": ["node_modules"]
}
